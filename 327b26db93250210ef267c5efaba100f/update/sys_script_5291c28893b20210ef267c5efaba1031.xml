        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

    // Get the sys_id of the current book from the ISBN reference in the Book Instance
    var bookSysId = current.title;

    // GlideAggregate query to count the number of book instances for the current book
    var ga = new GlideAggregate('x_1383151_bkquest_book_copy');
    ga.addQuery('title', bookSysId); 
    ga.addAggregate('COUNT'); // Specify that we want to count the records
    ga.query();

    var instanceCount = 0;
    if (ga.next()) {
        instanceCount = ga.getAggregate('COUNT'); // Get the count of instances
    }

    // Update the quantity in the Book Definition table for the current book
    var updateRecord = new global.GlideQuery('x_1383151_bkquest_book')
        .where('sys_id', bookSysId)
        .update({ quantity: parseInt(instanceCount) });

})(current, previous);
]]></script>
