        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    // Check if the quantity has increased
    if (current.quantity > previous.quantity) {
        var difference = current.quantity - previous.quantity;

        // Create the specified number of new book instances
        for (var i = 0; i < difference; i++) {
            var bookInstance = new GlideRecord('x_1383151_bkquest_book_copy');
            bookInstance.initialize();
            bookInstance.title = current.sys_id; // Assuming isbn is a reference to Book Definition
            bookInstance.insert();
        }
    }

