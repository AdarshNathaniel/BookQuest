    var returnedDate = new GlideDateTime(current.returned_date);

    // Calculate the difference in milliseconds
    var difference = returnedDate.getNumericValue() - dueDate.getNumericValue();

    // Convert milliseconds difference to days (1 day = 86400000 milliseconds)
    var daysLate = Math.floor(difference / (1000 * 60 * 60 * 24));

