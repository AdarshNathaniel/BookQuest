        <name>Remove Extend Option</name>
        <order/>
        <script><![CDATA[function onLoad() {
    // Check if the Borrow Status is "extend" and has already been extended
    var borrowStatus = g_form.getValue('borrow_status');
    if (borrowStatus === 'extend') {
        var returnedDate = g_form.getValue('returned_date');
        if (returnedDate) {
            // If returned_date is set, the book has been extended, remove "Extend" option
            g_form.removeOption('borrow_status', 'extend');
        }
    }
}
]]></script>
