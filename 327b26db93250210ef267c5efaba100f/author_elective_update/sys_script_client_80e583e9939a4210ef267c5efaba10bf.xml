        <isolate_script>true</isolate_script>
        <messages/>
        <name>Validate Borrow Period </name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue === '') {
        return;
    }

    // Retrieve the system property value
    var maxBorrowDays = parseInt(guide.getProperty('x_1383151_bkquest.borrow.max_days'));

    // Parse the new value to an integer
    var borrowPeriod = parseInt(newValue, 10);

    // Check if the borrow period exceeds the maximum allowed days
    if (borrowPeriod > maxBorrowDays || borrowPeriod < 1) {
        // Display hint message
        var fieldName = control.name;
        g_form.setFieldHint(fieldName, 'The borrow period must be between 1 and ' + maxBorrowDays + ' days.');
    } else {
        // Clear any existing hint message
        g_form.clearFieldHint(control.name);
    }
}]]></script>
