        <messages/>
        <name>Validate Borrow Period</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading) {
        return;
    }

    // Parse the new value to an integer
    var borrowPeriod = parseInt(newValue, 10);

    // Check if the borrow period is more than 14 days or less than 1 day
    if (borrowPeriod > 14 || borrowPeriod < 1) {
        // Display error message
        g_form.showFieldMsg('days', 'The maximum days to borrow a book is 14 days only.', 'error');
    } else {
        // Clear any existing error message
        g_form.hideFieldMsg('days');
    }
}]]></script>
