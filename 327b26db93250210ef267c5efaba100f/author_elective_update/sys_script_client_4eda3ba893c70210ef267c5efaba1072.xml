        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue === '') {
        return;
    }

    // Display debug messages using addInfoMessage
    g_form.addInfoMessage('Client Script: onChange triggered');
    g_form.addInfoMessage('New value: ' + newValue);

    // Set return date to today's date using GlideDate
    if (newValue === 'return') {
        var glideDate = new GlideDate();
        g_form.setValue('returned_date', glideDate.getLocalDate()); // Set today's date in GlideDate format
        g_form.addInfoMessage('Returned date set to: ' + glideDate.getLocalDate());
    } 
    // Extend the borrow period
    else if (newValue === 'extend') {
        g_form.addInfoMessage('Extend option selected');
        
        var extendPeriod = parseInt(g_scratchpad.extend_borrow_period);
        var maxBorrowDays = parseInt(g_scratchpad.max_borrow_days);
        var borrowPeriod = parseInt(g_form.getValue('borrow_period'));

        g_form.addInfoMessage('Extend period: ' + extendPeriod);
        g_form.addInfoMessage('Max borrow days: ' + maxBorrowDays);
        g_form.addInfoMessage('Current borrow period: ' + borrowPeriod);

        // Check if 'extend' option is already selected
        var extendSelected = g_form.getOption('borrow_status', 'extend').selected;
        
        if (!extendSelected) {
            // Add extendPeriod to borrowPeriod
            borrowPeriod += extendPeriod;
            g_form.setValue('borrow_period', borrowPeriod);
            g_form.addInfoMessage('Updated borrow period: ' + borrowPeriod);

            // Hide the 'extend' option if the new borrow period exceeds the maximum allowed
            if (borrowPeriod > maxBorrowDays) {
                g_form.removeOption('borrow_status', 'extend');
                g_form.addInfoMessage('Extend option removed from borrow_status');
            }
        } else {
            // If 'extend' is already selected, add a message
            g_form.addInfoMessage('Extend option is already selected');
        }

        // Hide the 'borrow_status' field
        g_form.setDisplay('borrow_status', false);
        g_form.addInfoMessage('Borrow status field hidden');
    }
}
]]></script>
