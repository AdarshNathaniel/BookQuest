        <name>Validate Returned Date</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading) {
        return;
    }

    // Parse the new value to a Date object
    var returnedDate = new Date(newValue);

    // Get today's date
    var today = new Date();
    today.setHours(0, 0, 0, 0); // Set hours, minutes, seconds, and milliseconds to 0 for comparison

    // Check if the returned date is a future date
    if (returnedDate > today) {
        // Display error message
        g_form.showFieldMsg('returned_date', 'Returned date cannot be a future date. Please select a previous date or today\'s date.', 'error');
        g_form.clearValue('returned_date'); // Clear the field value if it's a future date
    } else {
        // Clear any existing error message
        g_form.hideFieldMsg('returned_date');
    }
}]]></script>
