        <script><![CDATA[var AuthorService = Class.create();
AuthorService.prototype = {
    initialize: function() {},

    getAuthorsWithBooks: function() {
        var authors = [];
        
        // Query authors
        var grAuthors = new GlideRecord('x_1383151_bkquest_author');
        grAuthors.query();
        
        while (grAuthors.next()) {
            var author = {
                full_name: grAuthors.full_name.getDisplayValue(),
                date_of_birth: grAuthors.date_of_birth.getDisplayValue(),
                gender: grAuthors.gender.getDisplayValue(),
                nationality: grAuthors.nationality.getDisplayValue(),
                author_image: grAuthors.author_image.toString(),
                books: []
            };
            
            // Query books written by this author
            var grBooks = new GlideRecord('x_1383151_bkquest_book');
            grBooks.addQuery('author', grAuthors.sys_id.toString());
            grBooks.query();
            
            while (grBooks.next()) {
                var book = {
                    title: grBooks.title.getDisplayValue(),
                    cover_image: grBooks.cover_image.toString()
                };
                author.books.push(book);
            }
            
            authors.push(author);
        }
        
        return authors;
    },

    type: 'AuthorService'
};
]]></script>
