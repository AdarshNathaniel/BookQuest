  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Popular Authors</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body ng-app="authorApp" ng-controller="authorController as c">
  <div class="container">
    <h2>Featured Authors</h2>
    <div class="authorList">
      <div class="author" ng-repeat="author in c.data.authors" ng-click="c.showAuthorDetails(author)">
        <div class="authorImageContainer">
          <img ng-src="{{author.author_image}}" alt="{{author.full_name}} image" class="authorImage img-responsive"/>
        </div>
        <h4>{{author.full_name}}</h4>  
        <span class="authorDetails">Books: {{author.books.length}}</span>
      </div>
    </div>
  </div>

  <!-- The Modal -->
  <div id="authorDetailsModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">{{c.selectedAuthor.full_name}}</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <div class="banner-2">
            <img ng-src="{{c.selectedAuthor.author_image}}" alt="{{c.selectedAuthor.full_name}} cover" class="BannerImg">                
          </div>
          <div class="info">
            <p><strong>Full Name: </strong>{{c.selectedAuthor.full_name}}</p>
            <p><strong>Date of Birth: </strong>{{c.selectedAuthor.date_of_birth}}</p>
            <p><strong>Gender: </strong>{{c.selectedAuthor.gender}}</p>
            <p><strong>Nationality: </strong>{{c.selectedAuthor.nationality}}</p>
            <p><strong>Books Written: </strong>{{c.selectedAuthor.books.length}}</p>
            <h3>Books</h3>
            <ul>
              <li ng-repeat="book in c.selectedAuthor.books">
                <img ng-src="{{book.cover_image}}" alt="{{book.title}} cover" class="BookImg">
                <span>{{book.title}}</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Include AngularJS -->
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
  <!-- Include Bootstrap JS for modal support -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <!-- Include client-side script -->
  <script src="clientScript.js"></script>
</body>
</html>
]]></template>
