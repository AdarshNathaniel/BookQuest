        <client_script><![CDATA[(function() {
  // Inject $rootScope into the widget controller
  function BookListController($rootScope) {
    var c = this;

    // Ensure c.data is defined and initialize books array
    c.data = c.data || {};
    c.data.books = [];

    // Listen for search results broadcast and update the book list
    $rootScope.$on('books.searchResults', function(event, books) {
      c.data.books = books;
    });
  }

  // Register the controller
  angular.module('sn.$sp').controller('bookList', ['$rootScope', BookListController]);
})();
]]></client_script>
